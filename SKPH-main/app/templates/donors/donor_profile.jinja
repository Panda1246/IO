{% extends "base.jinja" %}

{% block title %}{{ _("Donor Details") }}{% endblock %}


{% block content %}
<div class="container mt-2">
    <section>
        <h2>{{ _("Personal Information") }}</h2>
        <ul class="list-group">
            <li class="list-group-item"><strong>{{ _("Name:") }}</strong> {{ donor.name }}</li>
            <li class="list-group-item"><strong>{{ _("Last name:") }}</strong> {{ donor.surname }}</li>
            <li class="list-group-item"><strong>{{ _("Phone:") }}</strong> {{ donor.phone_number }}</li>
            <li class="list-group-item"><strong>{{ _("Email:") }}</strong> {{ donor.email}}</li>
        </ul>
    </section>
</div>
{% endblock %}