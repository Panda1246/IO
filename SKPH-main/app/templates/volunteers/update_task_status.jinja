{% extends "base.jinja" %}

{% block title %}{{ _("Update Task Status") }}{% endblock %}

{% block content %}
<div class="container mt-2">
    {% if referrer %}
    <br>
    <div>
        <a href="{{ referrer }}" class="btn btn-secondary">{{ _("Back") }}</a>
    </div>
    <hr class="my-4" />
    {% endif %}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>{{ _("Update Task Status") }}</h1>
            <form method="POST">
                <div class="form-group">
                    <label for="status">{{ _("Status") }}</label>
                    <select class="form-control" id="status" name="status">
                        {% for status in task.AVAILABLE_STATUS %}
                        <option value="{{ status }}" {% if task.status==status %}selected{% endif %}>
                            {{ _(status.capitalize()) }}
                        </option>
                        {% endfor %}
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">{{ _("Update Status") }}</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}