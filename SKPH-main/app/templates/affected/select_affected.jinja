{% extends "base.jinja" %}

{% block title %}{{ _("Select Affected") }}{% endblock %}

{% block content %}
<div class="container mt-2">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1>{{ _("Select Affected") }}</h1>
      <form action="{{ url_for('affected.select_affected') }}" method="post">
        <fieldset>
          <div class="form-group">
            <label for="affected_id">{{ _("Choose Affected:") }}</label>
            <select id="affected_id" name="affected_id" class="form-control" required>
              {% for affected in affected %}
              <option value="{{ affected.id }}">{{ affected.first_name }} {{ affected.last_name }}</option>
              {% endfor %}
            </select>
          </div>
          <div class="mt-3">
            <button type="submit" class="btn btn-primary">{{ _("Continue") }}</button>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
</div>
{% endblock %}